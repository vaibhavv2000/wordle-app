<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Player</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
    integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="http://localhost:3000/css/sidebar.css">
  <link rel="stylesheet" href="http://localhost:3000/css/video.css">
  <script src="http://localhost:3000/js/video.js" defer></script>
  <script src="./js/bottomnav.js" defer></script>
</head>

<body>
  <%- include('partials/bottomNav.ejs') %>
    <div style="display: flex;">
      <%- include('partials/sidebar.ejs') %>
        <div class="main">
          <div class="video-holder">
            <video src="http://localhost:3000/video/waves.mp4" id="video"></video>
            <div class="controls">
              <div class="slider">
                <input type="range" id="range" value="0" />
              </div>
              <div class="options">
                <div class="options-left">
                  <i class="fa-solid fa-volume-high" id="voice"></i>
                  <div class="range-holder">
                    <input type="range" min="0" max="100" value="30" class="volume" />
                  </div>
                  <div class="playback-time">
                    <span class="current-time">0:00</span>
                    <span class="time-divider">/</span>
                    <span class="total-time">0:24</span>
                  </div>
                </div>
                <div class="options-center">
                  <i class="fa-solid fa-backward backward"></i>
                  <i class="fa-solid fa-play" id="play"></i>
                  <i class="fa-solid fa-forward forward"></i>
                </div>
                <div class="options-right">
                  <i class="fa-solid fa-circle-play play-speed"></i>
                  <i class="fa-solid fa-ticket pip"></i>
                  <i class="fa-solid fa-expand full-screen"></i>
                </div>
              </div>
            </div>

            <div class="speed-opt-holder">
              <div class="speed-options">0.5</div>
              <div class="speed-options">0.75</div>
              <div class="speed-options">1</div>
              <div class="speed-options">1.25</div>
              <div class="speed-options">1.5</div>
            </div>
          </div>
        </div>
    </div>
</body>

</html>